{% extends ':admin:base.html.twig' %}

{% block title %}{{ entity.name }} - Obtener Boton de Actividades{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ entity.name }} - Obtener boton de Actividades{% endblock %}
    {% endembed %}
{% endblock %}
{% block content %}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> {{ entity.name }} - Obtener boton de Actividades
            <a href="{{ path('actyvity_list') }}" class="btn" style="float:right">{{ 'admin.back' | trans }}</a>
        </div>
        <div>
            <pre>
                <textarea style="width: 900px; height: 400px; overflow: no-display;" readonly="readonly">
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
                    <!-- jQuery Modal -->
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
                    <!-- Modal HTML embedded directly into document -->
                    <div id="ex1" class="modal" style="max-width: 1050px; height: 650px;">
                        <iframe src="http://viento-sur.icox.mobi/es/activity/booking/button/iframe/{{ entity.id }}/true/{{ entity.name | replace({'&': 'and', ' ':'_'}) }}" scrolling="auto" width="1000" height="600">
                            Texto alternativo para navegadores que no aceptan iframes
                      </iframe>  
                    </div>
                    <!-- Link to open the modal -->
                    <p>
                        <a href="#ex1" rel="modal:open" style="color:#ffffff;border:0;display: inline-block;padding: 14px 25px;opacity: 0.9;background-color: #008cd1;text-align: center;text-decoration: none;font-size: 16px;margin-left: 20px;">
                            Comprar Actividad
                        </a>
                    </p>
                </textarea>
            </pre>
        </div>
    </div>
</div>      
{% endblock %}    
