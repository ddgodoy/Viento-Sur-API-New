{% extends 'VientoSurAppAppBundle::layoutHotel.html.twig' %}
{% block title %}{{ 'index.purchase_summary' | trans }}{% endblock %}
{% set isIframe = app.session.get('iframe') %}
{% block banner %}
    {% if isIframe != true %}
        {% include '@VientoSurAppApp/_partial/banner.html.twig' %}
    {% endif %}    
{% endblock %}

{% block breadcrumb %}
    {% if isIframe != true %}
        {% embed '@VientoSurAppApp/_partial/breadcrumb.html.twig' %}
            {% block section %}Actividades{% endblock %}
            {% block sub_section %}Detalle de actividades{% endblock %}
        {% endembed %}
    {% endif %} 
{% endblock %}

{% block content %}
    {{ parent() }}
    {% include 'VientoSurAppAppBundle:Email:bookingActivityDetail.html.twig' %}
{% endblock %}
