{% extends 'VientoSurAppAppBundle::layoutHotel.html.twig' %}
{% block title %}{{ 'index.rooms_available' | trans }} {{item.name}} {% endblock %}
{% set url = 'uploads/activity/image/'~item.id~'/' %}
{% block meta_open_graph %}
    {% if pictures is defined %}
        {% for key, picture in pictures %}
            {% if loop.index == 1 %}
                {% set image = asset(url)~picture.imageName %}
                <meta property="og:image" content="{{ image }}" />
            {% endif %}
        {% endfor %}
    {% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:url"                content="https://vientosur.net{{ app.request.pathInfo }}" />
    <meta property="og:title"              content="{{item.name}}" />
    <meta property="og:description"        content="{{ item.description | truncate(200, true) }}" />
{% endblock %}

{% block gplus_script %}
    <link rel="canonical" href="https://vientosur.net{{ app.request.pathInfo }}" />
    <script src="https://apis.google.com/js/platform.js" async defer>
        {lang: '{{ app.request.locale }}' }
    </script>
{% endblock %}

{% block shorter_script %}
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script>
        function getUrlShorter(){
            var long_url = "https://vientosur.net{{ app.request.pathInfo }}";
            var url = "{{ path('get_url_shorter') }}";
            $.ajax({
                type: 'GET',
                url: url,
                data: 'long_url=' + long_url
            }).done(function(data) {
                console.log('url', data);
                $('#shared-twitter').attr('data-url', data)
            });
        }
        getUrlShorter();
    </script>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://api.mqcdn.com/sdk/mapquest-js/v1.3.2/mapquest.js"></script>   
    <link type="text/css" rel="stylesheet" href="https://api.mqcdn.com/sdk/mapquest-js/v1.3.2/mapquest.css"/> 
    <script>
        window.twttr = (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0],
                    t = window.twttr || {};
            if (d.getElementById(id)) return t;
            js = d.createElement(s);
            js.id = id;
            js.src = "https://platform.twitter.com/widgets.js";
            fjs.parentNode.insertBefore(js, fjs);

            t._e = [];
            t.ready = function(f) {
                t._e.push(f);
            };
            console.log('twitter load');
            return t;
        }(document, "script", "twitter-wjs"));
    </script>
    <script type="text/javascript"> 
        $("#animarscroll").on("click", function(){
            var posicion = $(".listRooms").offset().top;
            $("html, body").animate({
                scrollTop: posicion
            }, 1500);
        });

        $(document).ready(function () {
            var str = $('#info').text();
            $("#info").html( str.replace(/\n/g, "<br />"));
            
            $('a[href="#google-map-tab"]').on('shown.bs.tab', function(e) {
                
                var latLng = {lat: {{ latitude }}, lng: {{ longitude }} };
                var hotelName = '{{item.name}}';
                
                L.mapquest.key = 'vcdIMmp9OiCGm1lsGE4Z1QRz5AVABDyG';
                
                // 'map' refers to a <div> element with the ID map
                var map = L.mapquest.map('google-map-tab', {
                  center: latLng,
                  layers: L.mapquest.tileLayer('map'),
                  zoom: 12
                });
                
                L.mapquest.textMarker(latLng, {
                    text: hotelName,
                    position: 'right',
                    type: 'marker',
                    icon: {
                      primaryColor: '#333333',
                      secondaryColor: '#333333',
                      size: 'sm'
                    }
                  }).addTo(map);
            });
            
        });
    </script>
    <script>
        //TABS DETAIL
        $('#tabsDetail a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
    </script>

{% endblock %}

{% block banner %}
    {% include '@VientoSurAppApp/_partial/banner.html.twig' %}
{% endblock %}

{% block switch_service %}
