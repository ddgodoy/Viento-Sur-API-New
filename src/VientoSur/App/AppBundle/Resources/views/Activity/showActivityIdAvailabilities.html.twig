                                        <a href="#google-map-tab" data-toggle="tab" id="tab-mapa" style="margin-bottom: 0px"><i class="fa fa-map-marker"></i> {{ 'hotels.map' | trans }}</a>
                                    </li>
                                </ul>

                                <!-- Tab panes -->
