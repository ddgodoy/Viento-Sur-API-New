    {% if not pagination | length  %}
    <li>No se encontraron Actividades disponibles</li>
{% else %}
    {% set targetCurrency = app.session.get('targetCurrency') %}
    {% if targetCurrency == 'USD' %}
        {% set symbol = 'US$' %}
    {% elseif targetCurrency == 'ARS' %}
        {% set symbol = 'AR$' %}
    {% endif %}
    {% set decimal =false %}
    <div class="ListHotel">

        {% for item in pagination %}  
        <span class="booking-item cursor-pointer" data-href="{{ path('viento_sur_app_app_homepage_show_activity_id',{'_locale': app.request.locale, 'id': item.id, 'latitude': item.latitude, 'longitude':item.longitude})}}">
                <div id="thumbHotel">

                    <div class="imgHotel col-xs-4">
                        <img src="{{ render(controller('VientoSurAppAppBundle:Activity:getPictureByActivity',{ 'id':  item.id})) }}" width="200" height="150"
                             alt="{{ item.name }}">
                    </div>
                    <div class="infoHotel col-xs-12 col-sm-6 noPadding">
                        <h4 title="{{ item.name }} - {{ 'activity.activity_in' | trans }} {{ app.session.get('destination_activity').text }} - VientoSur.net">
                                {{ item.name }}
                        </h4>
                        <div class="row">
                            <div class="col-sm-6 star-div" style="margin-left: 0px;">
                                {{ render(controller('VientoSurAppAppBundle:Activity:getDayByActivity',{ 'id':  item.id})) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10">
                                <div class="modalMap" style="font-size: 12px">
                                    <i class="fa fa-map-marker fa-lg input-icon"  style="font-size: 15px"></i>&nbsp;
                                    <a class="booking-item-address" data-prevent="modal"
                                       data-latitude="{{ item.latitude }}"
                                       data-longitude="{{ item.longitude }}"
                                       data-name="{{ item.name }}">
                                        {{ item.address_destination }} </a>
                                </div>
                            </div>
                        </div>
                        {% if item.percentage_paid_enabled %}        
                        <p class="inDemand">
                            <span>
                                {{ 'activity.payment_on_arrival' | trans }}
                            </span>
                        </p> 
                        {% endif %}
                    </div>
                    <div class="col-xs-5 col-sm-2 textRight priceRoom">
                        <p> {{ 'activity.price' | trans }} </p>
                            <h5>{{ 'flights.since' | trans }} {{ symbol }}
                                {{ render(controller('VientoSurAppAppBundle:Activity:getConvertCurrency',{ 'amount':  item.price, 'symbol': symbol})) }}
                            </h5>

                            <button>{{ 'activity.see_detail' | trans }}<i class="fa fa-angle-right input-icon" style="font-size: 16px; font-weight: bold; text-align: right; margin-left: 4px"></i></button>
                    </div>
                </div>
        </span>
        {% endfor %}
    </div>
{%endif%}